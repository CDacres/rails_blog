<h1>My Blog</h1>
<%= link_to "Home", posts_path %>

<h2><%= @post.title %></h2>
<h4><%= @post.author %></h4>
<p><%= @post.body %></p>
<img src="<%= @post.picture %>" width="500" height="auto">
<br>
<%= link_to "View Comments", post_comments_path(@post) %> |
<%= link_to "Edit Post", edit_post_path(@post) %> |
<%= link_to "Delete Post", @post, method: :delete, data: { confirm: "Are you sure?" } %>