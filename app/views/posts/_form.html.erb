<%= form_for(@post) do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :author %>
	<%= f.text_field :author %>

	<%= f.label :theme %>
	<%= f.text_field :theme %>

	<%= f.label :body %>
	<%= f.text_field :body %>

	<%= f.label :picture %>
	<%= f.text_field :picture %>

	<%= f.submit %>

<% end %>